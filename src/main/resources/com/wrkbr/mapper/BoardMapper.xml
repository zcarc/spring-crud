<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wrkbr.mapper.BoardMapper">


    <select id="getList" resultType="com.wrkbr.domain.BoardVO">
        <![CDATA[
          select * from board where bno > 0
        ]]>
    </select>

    <sql id="criteria">
      <where>
        <trim prefixOverrides="OR">
            <foreach collection="typeArr" item="type">
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'T'.toString()">
                            title like concat('%', #{keyword}, '%')
                        </when>
                        <when test="type == 'C'.toString()">
                            content like concat('%', #{keyword}, '%')
                        </when>
                        <when test="type == 'W'.toString()">
                            writer like concat('%', #{keyword}, '%')
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
      </where>
    </sql>

    <select id="getListWithPagination" resultType="com.wrkbr.domain.BoardVO">
          select * from board
          <include refid="criteria" />
          order by bno desc limit #{offset}, #{displayRecords}
    </select>

    <select id="boardCount" resultType="int">
        select count(bno) from board
        <include refid="criteria" />
    </select>


    <insert id="insert">
        insert into board(title, content, writer) values(#{title}, #{content}, #{writer})
    </insert>


    <insert id="insertSelectKey">

        <selectKey keyProperty="bno" order="BEFORE" resultType="long">
            select auto_increment from information_schema. TABLES
            where table_schema = "wrkdb" AND table_name = "board";
        </selectKey>

        insert into board(bno, title, content, writer) values(#{bno}, #{title}, #{content}, #{writer})

    </insert>


    <select id="read" resultType="com.wrkbr.domain.BoardVO">
        select * from board where bno = #{bno}
    </select>


    <delete id="delete">
        delete from board where bno = #{bno}
    </delete>

    <update id="update">
        update board
        set title = #{title},
        content = #{content},
        writer = #{writer},
        updateDate = now()
        where bno = #{bno}
    </update>

</mapper>